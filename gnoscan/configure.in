AC_INIT(src/GnoScan.cc)
AM_INIT_AUTOMAKE(GnoScan, 0.1)
AM_MAINTAINER_MODE
AM_ACLOCAL_INCLUDE(macros)
AM_CONFIG_HEADER(config.h)

dnl Checks for programs.
AC_PROG_CXX
AC_PROG_CC

dnl Checks for header files.
AC_HEADER_STDC
AC_CHECK_HEADERS(sys/time.h unistd.h)
AC_CHECK_HEADER(getopt.h)

dnl Checks for typedefs, structures, and compiler characteristics.
AC_HEADER_TIME

dnl Checks for library functions.
AC_CHECK_FUNCS(gettimeofday)
AC_CHECK_LIB(socket,connect)
AC_CHECK_LIB(nsl,gethostbyname)

AC_CHECK_FUNC(getopt_long,
 	[AC_DEFINE(HAVE_GETOPT_H,1,
	           [Define this if there is a system getopt.h header])],
	[AC_MSG_RESULT(Using included getopt header)])      

dnl gtkmm and gnomemm
AM_PATH_GTK(1.2.7,, [
            AC_MSG_ERROR([*** GTK >= 1.2.7 required, but it does not seem
                          to be installed])
])


AM_PATH_GTKMM(1.2.3, , [
            AC_MSG_ERROR([*** GTK-- >= 1.2.3 required, but it does not
                          seem to be installed])
])
AC_SUBST($GTKMM_CFLAGS)

GNOME_INIT
GNOME_COMMON_INIT
GNOMEMM_CFLAGS="`$GNOME_CONFIG --cflags gnomemm`" 
GNOMEMM_LIBS="`$GNOME_CONFIG --libs gnomemm`"
AC_SUBST(GNOMEMM_CFLAGS)
AC_SUBST(GNOMEMM_LIBS)

dnl Check for programs
AC_CHECK_PROGS(GTKMM, gtkmm-config, no)
if test $GTKMM = "no"; then
        echo "You need to have gtkmm-config in your PATH"
        exit 1
fi
LIBS="$LIBS `gtkmm-config --libs`"

AC_OUTPUT([Makefile
	       macros/Makefile
	       src/Makefile])
